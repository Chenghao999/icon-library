# Flask Application Configuration
FLASK_APP=app.py
FLASK_ENV=development  # Set to production for production environment
FLASK_DEBUG=True  # Set to False for production environment
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Application Configuration
APP_VERSION=0.1.10
SECRET_KEY=your_secret_key_here  # Must change to a strong key in production

# Database Configuration
# SQLAlchemy database URL (SQLite)
SQLALCHEMY_DATABASE_URI=sqlite:///./icon_store.db
# If using other databases, uncomment and modify the corresponding lines below
# SQLALCHEMY_DATABASE_URI=mysql+pymysql://username:password@localhost/icon_store
# SQLALCHEMY_DATABASE_URI=postgresql://username:password@localhost/icon_store

SQLALCHEMY_TRACK_MODIFICATIONS=False

# Storage Configuration
ICON_STORAGE_PATH=./uploads/icons  # Icon file storage path
MAX_CONTENT_LENGTH=16777216  # Maximum upload file size (16MB)

# Authentication Configuration
# Simple authentication username and password (for development, use more secure mechanism in production)
AUTH_USERNAME=admin
AUTH_PASSWORD=admin123  # Must change to a strong password in production