# Flask应用配置
FLASK_APP=app.py
FLASK_ENV=development  # 生产环境设为 production
FLASK_DEBUG=True  # 生产环境设为 False
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# 应用配置
APP_VERSION=0.1.5
SECRET_KEY=your_secret_key_here  # 生产环境中必须修改为强密钥

# 数据库配置
# SQLAlchemy 数据库URL (SQLite)
SQLALCHEMY_DATABASE_URI=sqlite:///./icon_store.db
# 如果使用其他数据库，取消下面对应行的注释并修改
# SQLALCHEMY_DATABASE_URI=mysql+pymysql://username:password@localhost/icon_store
# SQLALCHEMY_DATABASE_URI=postgresql://username:password@localhost/icon_store

SQLALCHEMY_TRACK_MODIFICATIONS=False

# 存储配置
ICON_STORAGE_PATH=./uploads/icons  # 图标文件存储路径
MAX_CONTENT_LENGTH=16777216  # 最大上传文件大小 (16MB)

# 认证配置
# 简单认证的用户名和密码 (开发环境用，生产环境应使用更安全的认证机制)
AUTH_USERNAME=admin
AUTH_PASSWORD=admin123  # 生产环境必须修改为强密码